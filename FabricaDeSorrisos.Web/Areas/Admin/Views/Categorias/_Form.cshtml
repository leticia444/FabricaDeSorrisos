@model FabricaDeSorrisos.Domain.Entities.Categoria

<div class="card-custom p-5">
    <h6 class="label-custom text-uppercase text-muted border-bottom pb-2 mb-4">
        <i class="bi bi-info-circle-fill me-2"></i>Dados da Categoria
    </h6>
    
    <div class="mb-4">
        <label class="label-custom">Nome da Categoria</label>
        <div class="input-group">
            <span class="input-group-text bg-light border border-end-0 rounded-start-3 text-muted">
                <i class="bi bi-tag"></i>
            </span>
            <input asp-for="Nome" class="input-custom form-control border-start-0 ps-2" placeholder="Ex: Educativos, Jogos de Tabuleiro..." required />
        </div>
        <span asp-validation-for="Nome" class="text-danger small fw-bold mt-1 d-block"></span>
    </div>

    <div class="d-flex justify-content-end pt-3">
        <button type="submit" class="btn-gradient-blue">
            <i class="bi bi-check-lg me-2"></i> Salvar Categoria
        </button>
    </div>
</div>