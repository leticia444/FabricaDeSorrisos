@model FabricaDeSorrisos.Domain.Entities.Categoria

<div class="mb-3">
    <label class="form-label fw-bold">Nome da Categoria</label>
    <input asp-for="Nome" class="form-control" placeholder="Ex: Bonecas, Jogos, Blocos" required />
    <span asp-validation-for="Nome" class="text-danger small"></span>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-action="Index" class="btn btn-light me-md-2">Cancelar</a>
    <button type="submit" class="btn btn-primary px-4">Salvar</button>
</div>