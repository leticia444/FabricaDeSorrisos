@model FabricaDeSorrisos.Domain.Entities.Categoria
@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/areas/admin/categorias.css" />

<div class="categorias-container container-fluid p-0" style="max-width: 700px;">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn-back me-3" title="Voltar">
            <i class="bi bi-arrow-left fs-5"></i>
        </a>
        <div>
            <h2 class="page-title">Editar Categoria</h2>
            <p class="page-subtitle mb-0">Alterando: <span style="color:var(--cor-rosa)">@Model.Nome</span></p>
        </div>
    </div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <partial name="_Form" model="Model" />
    </form>
</div>