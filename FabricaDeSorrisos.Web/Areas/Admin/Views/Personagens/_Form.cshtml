@model FabricaDeSorrisos.Domain.Entities.Personagem

<div class="card-custom p-5">
    <h6 class="label-custom text-uppercase text-muted border-bottom pb-2 mb-4">
        <i class="bi bi-info-circle-fill me-2"></i>Dados do Personagem
    </h6>
    
    <div class="mb-4">
        <label class="label-custom">Nome do Personagem</label>
        <div class="input-group">
            <span class="input-group-text bg-light border border-end-0 rounded-start-3 text-muted">
                <i class="bi bi-emoji-laughing-fill"></i>
            </span>
            <input asp-for="Nome" class="input-custom form-control border-start-0 ps-2" placeholder="Ex: Woody, Barbie, Homem-Aranha" required />
        </div>
        <span asp-validation-for="Nome" class="text-danger small fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-4">
        <label class="label-custom">Imagem / Ícone</label>
        <div class="bg-light p-4 rounded-3 border text-center">
            @if (!string.IsNullOrEmpty(Model.ImagemUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImagemUrl" class="rounded-circle shadow-sm border border-warning p-1 bg-white" style="width: 100px; height: 100px; object-fit: cover;" />
                    <p class="small text-muted mt-2 mb-0">Imagem Atual</p>
                </div>
                <input type="hidden" asp-for="ImagemUrl" />
            }
            else
            {
                <div class="mb-3 text-muted opacity-50">
                    <i class="bi bi-person-bounding-box fs-1"></i>
                    <p class="small">Sem imagem definida</p>
                </div>
            }
            <input type="file" name="arquivo" class="input-custom form-control form-control-sm w-75 mx-auto" accept="image/*" />
            <div class="form-text mt-2 small">Recomendado: Imagens quadradas (PNG/JPG) com fundo transparente.</div>
        </div>
    </div>

    <div class="d-flex justify-content-end pt-3">
        <button type="submit" class="btn-gradient-blue">
            <i class="bi bi-check-lg me-2"></i> Salvar Personagem
        </button>
    </div>
</div>