@model Pedido
@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📦 Pedido #@Model.Id.ToString("D6")</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
    </div>

    <div class="row">
        <div class="col-md-5">

            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-bold bg-primary text-white">👤 Dados do Cliente</div>
                <div class="card-body">
                    <p class="mb-1"><strong>Nome:</strong> @ViewBag.NomeCliente</p>
                    <p class="mb-1"><strong>Email:</strong> @ViewBag.EmailCliente</p>
                    <p class="mb-0"><strong>ID Sistema:</strong> @Model.UsuarioId</p>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-bold bg-secondary text-white">🚚 Entrega</div>
                <div class="card-body">
                    <p class="mb-1"><strong>CEP:</strong> @Model.CEP</p>
                    <p class="mb-0"><strong>Endereço:</strong> @Model.EnderecoEntrega</p>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-bold bg-success text-white">💲 Pagamento</div>
                <div class="card-body">
                    <p class="mb-1"><strong>Forma:</strong> @Model.FormaPagamento</p>
                    <p class="mb-1"><strong>Valor Produtos:</strong> R$ @((Model.ValorTotal - Model.ValorFrete).ToString("N2"))</p>
                    <p class="mb-1"><strong>Frete:</strong> R$ @Model.ValorFrete.ToString("N2")</p>
                    <hr>
                    <h4 class="text-success fw-bold">Total: R$ @Model.ValorTotal.ToString("N2")</h4>
                </div>
            </div>

            <div class="mt-4 d-grid gap-2">
                @if (Model.Status == "Aguardando Pagamento")
                {
                    <form asp-action="ConfirmarPagamento" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm">
                            <i class="bi bi-check-circle-fill me-2"></i> Confirmar Pagamento
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success text-center mb-0">
                        <i class="bi bi-check-all me-2"></i> Este pedido já foi finalizado.
                    </div>
                }
            </div>

        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-header fw-bold bg-white">🧸 Itens do Pedido</div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-3">Produto</th>
                                <th class="text-center">Qtd</th>
                                <th class="text-end pe-3">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Itens)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            @if (item.Brinquedo != null)
                                            {
                                                <img src="@(item.Brinquedo.ImagemUrl ?? "https://placehold.co/50")" width="40" class="me-2 rounded">
                                                <span>@item.Brinquedo.Nome</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Produto Removido</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.Quantidade</td>
                                    <td class="text-end pe-3">R$ @((item.Quantidade * item.PrecoUnitario).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>