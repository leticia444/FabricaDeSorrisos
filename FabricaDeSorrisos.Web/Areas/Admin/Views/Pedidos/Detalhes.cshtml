@model Pedido
@{
    ViewData["Title"] = "Detalhes do Pedido";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/areas/admin/pedidos.css" />

<div class="pedidos-container container-fluid p-0" style="max-width: 1200px;">
    
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn-back me-3" title="Voltar">
            <i class="bi bi-arrow-left fs-5"></i>
        </a>
        <div>
            <h2 class="page-title">Pedido #@Model.Id.ToString("D6")</h2>
            <p class="page-subtitle mb-0">
                Realizado em @Model.DataPedido.ToString("dd/MM/yyyy 'às' HH:mm")
            </p>
        </div>
        <div class="ms-auto">
            @if (Model.Status == "Aguardando Pagamento")
            {
                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-hourglass-split me-2"></i>Aguardando Pagamento
                </span>
            }
            else
            {
                <span class="badge bg-success fs-6 px-3 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i>@Model.Status
                </span>
            }
        </div>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-4">
            <div class="card-custom p-4">
                <h6 class="text-uppercase text-primary fw-bold border-bottom pb-2 mb-3">
                    <i class="bi bi-person-circle me-2"></i>Cliente
                </h6>
                <div class="info-label">Nome Completo</div>
                <div class="info-value">@ViewBag.NomeCliente</div>
                
                <div class="info-label">Email</div>
                <div class="info-value text-break">@ViewBag.EmailCliente</div>

                <div class="info-label">CPF</div>
                <div class="info-value">@(Model.Usuario?.Cpf ?? "Não informado")</div>
                
                <div class="info-label">ID Sistema</div>
                <div class="info-value">#@Model.UsuarioId</div>
            </div>

            <div class="card-custom p-4">
                <h6 class="text-uppercase text-warning fw-bold border-bottom pb-2 mb-3" style="color: #e6c800 !important;">
                    <i class="bi bi-truck me-2"></i>Entrega
                </h6>
                <div class="info-label">Endereço</div>
                <div class="info-value">@(Model.EnderecoEntrega ?? "Não informado")</div>
                
                <div class="info-label">CEP</div>
                <div class="info-value">@(Model.CEP ?? "—")</div>
            </div>

            <div class="card-custom p-4">
                <h6 class="text-uppercase text-success fw-bold border-bottom pb-2 mb-3">
                    <i class="bi bi-credit-card me-2"></i>Pagamento
                </h6>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted fw-bold">Método:</span>
                    <span class="fw-bold">@(Model.FormaPagamento ?? "Padrão")</span>
                </div>
                
                @if (Model.Status == "Aguardando Pagamento")
                {
                    <form asp-action="ConfirmarPagamento" asp-route-id="@Model.Id" method="post" class="mt-4">
                        <button type="submit" class="btn-confirmar w-100">
                            <i class="bi bi-check-lg me-2"></i>Confirmar Pagamento
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success mt-3 mb-0 text-center border-0 bg-success bg-opacity-10 text-success fw-bold rounded-4">
                        <i class="bi bi-check-all me-1"></i> Pedido Pago
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card-custom">
                <div class="card-header-custom">
                    <i class="bi bi-basket2-fill me-2"></i> Itens do Pedido
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">Produto</th>
                                    <th class="text-center">Qtd</th>
                                    <th class="text-end">Unitário</th>
                                    <th class="text-end pe-4">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Itens)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                @if (item.Brinquedo != null)
                                                {
                                                    <div class="bg-light p-1 border rounded me-3">
                                                        <img src="@(item.Brinquedo.ImagemUrl ?? "https://placehold.co/50")" width="40" height="40" style="object-fit: cover; border-radius: 4px;">
                                                    </div>
                                                    <span class="fw-bold">@item.Brinquedo.Nome</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Produto Removido</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="text-center fw-bold text-secondary">@item.Quantidade</td>
                                        <td class="text-end text-muted">R$ @item.PrecoUnitario.ToString("N2")</td>
                                        <td class="text-end pe-4 fw-bold text-dark">R$ @((item.Quantidade * item.PrecoUnitario).ToString("N2"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="p-4 bg-light border-top">
                    <div class="row justify-content-end">
                        <div class="col-md-5">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Subtotal:</span>
                                <span class="fw-bold">R$ @((Model.ValorTotal - Model.ValorFrete).ToString("N2"))</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
                                <span class="text-muted">Frete:</span>
                                <span class="fw-bold">R$ @Model.ValorFrete.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-5 fw-bold text-dark">Total:</span>
                                <span class="fs-3 fw-bolder text-success">R$ @Model.ValorTotal.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>