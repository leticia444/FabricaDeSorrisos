@model FabricaDeSorrisos.Web.Areas.Admin.Models.BrinquedoFormViewModel

<div class="row mb-3">
    <div class="col-md-8">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Preço (R$)</label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
    </div>
</div>

<div class="mb-3">
    <label class="form-label">Descrição</label>
    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Imagem</label>
        @if (!string.IsNullOrEmpty(Model.ImagemUrlAtual))
        {
            <div class="my-2">
                <img src="@Model.ImagemUrlAtual" width="80" class="img-thumbnail" />
            </div>
        }
        <input asp-for="ImagemUpload" type="file" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Estoque</label>
        <input asp-for="Estoque" type="number" class="form-control" />
    </div>
</div>

<hr />

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Marca</label>
        <select asp-for="MarcaId" class="form-select" asp-items="@(new SelectList(Model.Marcas, "Id", "Nome"))">
            <option value="">Selecione...</option>
        </select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Categoria</label>
        <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(Model.Categorias, "Id", "Nome"))">
            <option value="">Selecione...</option>
        </select>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Faixa Etária</label>
        <select asp-for="FaixaEtariaId" class="form-select" asp-items="@(new SelectList(Model.FaixasEtarias, "Id", "Descricao"))">
            <option value="">Selecione...</option>
        </select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Personagem</label>
        <select asp-for="PersonagemId" class="form-select" asp-items="@(new SelectList(Model.Personagens, "Id", "Nome"))">
            <option value="">Nenhum</option>
        </select>
    </div>
</div>

<div class="form-check mb-4">
    <input asp-for="Ativo" class="form-check-input" />
    <label asp-for="Ativo" class="form-check-label">Produto Ativo (Visível na loja)</label>
</div>

<button type="submit" class="btn btn-success w-100">Salvar</button>