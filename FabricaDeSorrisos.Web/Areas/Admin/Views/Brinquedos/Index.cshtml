@model IEnumerable<FabricaDeSorrisos.Domain.Entities.Brinquedo>
@{
    ViewData["Title"] = "Gerenciar Brinquedos";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/areas/admin/brinquedos.css" />

<div class="brinquedos-container container-fluid p-0">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">Catálogo de Brinquedos</h2>
            <p class="page-subtitle mb-0">Gerencie os produtos mágicos da loja ✨</p>
        </div>
        <a asp-action="Create" class="btn btn-gradient-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Novo Brinquedo
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <div class="d-flex align-items-center">
                <i class="bi bi-box-seam-fill fs-4 me-3"></i>
                <h5 class="card-title-white">Lista de Produtos Cadastrados</h5>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Produto</th>
                            <th>Categoria</th>
                            <th>Preço</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="img-wrapper me-3">
                                            <img src="@(item.ImagemUrl ?? "https://placehold.co/100x100?text=Sem+Foto")" class="img-product">
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.Nome</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">@(item.Categoria?.Nome ?? "—")</span>
                                    @if (item.SubCategoriaId != null)
                                    {
                                        <small class="d-block text-muted">@item.SubCategoria?.Nome</small>
                                    }
                                </td>
                                <td>
                                    <span class="text-price">R$ @item.Preco.ToString("N2")</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge-status status-ativo">
                                            <i class="bi bi-check-circle-fill me-1"></i> Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-status status-inativo">
                                            <i class="bi bi-pause-circle-fill me-1"></i> Inativo
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon-circle text-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    
                                    <form asp-action="AlternarStatus" asp-route-id="@item.Id" class="d-inline">
                                        <button type="submit" class="btn-icon-circle text-secondary" title="Alterar Status">
                                            <i class="bi @(item.Ativo ? "bi-eye-slash-fill text-danger" : "bi-eye-fill text-success")"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>