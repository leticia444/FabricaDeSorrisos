@model FabricaDeSorrisos.Web.Areas.Admin.Models.BrinquedoFormViewModel
@{
    ViewData["Title"] = "Novo Brinquedo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/areas/admin/brinquedos.css" />

<div class="brinquedos-container container-fluid p-0" style="max-width: 1100px;">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn-back me-3" title="Voltar">
            <i class="bi bi-arrow-left fs-5"></i>
        </a>
        <div>
            <h2 class="page-title">Cadastrar Novo Brinquedo</h2>
            <p class="page-subtitle mb-0">Preencha os dados para adicionar ao catálogo.</p>
        </div>
    </div>

    <form asp-action="Create" enctype="multipart/form-data">
        <partial name="_Form" model="Model" />
    </form>
</div>