<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Fábrica</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f6f9; /* Fundo cinza claro suave */
        }

        #wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* --- Estilos do Menu Lateral (Sidebar) --- */
        #sidebar-wrapper {
            min-width: 260px;
            max-width: 260px;
            background-color: #0d6efd; /* Azul Padrão */
            color: white;
            transition: margin 0.25s ease-out;
        }

        .sidebar-heading {
            padding: 1.5rem 1.25rem;
            font-size: 1.4rem;
            font-weight: bold;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            background-color: rgba(0, 0, 0, 0.1); /* Levemente mais escuro */
        }

        .list-group-item {
            background-color: transparent;
            color: rgba(255, 255, 255, 0.85);
            border: none;
            padding: 0.9rem 1.5rem;
            font-size: 1rem;
            border-left: 4px solid transparent; /* Tarja lateral invisível */
        }

            .list-group-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: #fff;
            }

            /* Item ativo (página atual) */
            .list-group-item.active {
                background-color: rgba(255, 255, 255, 0.2);
                color: #fff;
                font-weight: 600;
                border-left-color: #ffc107; /* Tarja amarela de destaque */
                border-radius: 0; /* Remove arredondamento padrão do bootstrap */
            }

        /* --- Conteúdo Principal --- */
        #page-content-wrapper {
            flex: 1; /* Ocupa o resto da tela */
            display: flex;
            flex-direction: column;
        }

        .container-fluid {
            padding: 2rem;
        }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="bi bi-gear-wide-connected"></i> Admin 🐻<br>
                <small style="font-size: 0.8rem; font-weight: normal; opacity: 0.8;">Fábrica de Sorrisos</small>
            </div>

            <div class="list-group list-group-flush mt-2">

                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>

                <div class="sidebar-heading text-uppercase text-white-50 fs-6 mt-3 py-2 ps-4 text-start border-0" style="background: none; font-size: 0.75rem !important;">
                    Catálogo
                </div>

                <a asp-area="Admin" asp-controller="Brinquedos" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Brinquedos" ? "active" : "")">
                    <i class="bi bi-robot me-2"></i> Brinquedos
                </a>

                <a asp-area="Admin" asp-controller="Categorias" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categorias" ? "active" : "")">
                    <i class="bi bi-tags-fill me-2"></i> Categorias
                </a>

                <a asp-area="Admin" asp-controller="SubCategorias" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SubCategorias" ? "active" : "")">
                    <i class="bi bi-diagram-2 me-2"></i> Subcategorias
                </a>

                <a asp-area="Admin" asp-controller="Marcas" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Marcas" ? "active" : "")">
                    <i class="bi bi-award me-2"></i> Marcas
                </a>

                <a asp-area="Admin" asp-controller="Personagens" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Personagens" ? "active" : "")">
                    <i class="bi bi-emoji-smile me-2"></i> Personagens
                </a>

                <div class="sidebar-heading text-uppercase text-white-50 fs-6 mt-3 py-2 ps-4 text-start border-0" style="background: none; font-size: 0.75rem !important;">
                    Vendas
                </div>

                <a asp-area="Admin" asp-controller="Pedidos" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Pedidos" ? "active" : "")">
                    <i class="bi bi-receipt me-2"></i> Pedidos
                </a>

                <div class="sidebar-heading text-uppercase text-white-50 fs-6 mt-3 py-2 ps-4 text-start border-0" style="background: none; font-size: 0.75rem !important;">
                    Sistema
                </div>

                <a asp-area="Admin" asp-controller="Usuarios" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Usuarios" ? "active" : "")">
                    <i class="bi bi-people-fill me-2"></i> Usuários
                </a>

                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="list-group-item list-group-item-action mt-4 text-warning border-top border-white-50">
                    <i class="bi bi-box-arrow-left me-2"></i> Voltar à Loja
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4">
                <div class="container-fluid p-0">
                    <span class="navbar-text ms-auto text-muted small">
                        Área Administrativa Restrita
                    </span>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>