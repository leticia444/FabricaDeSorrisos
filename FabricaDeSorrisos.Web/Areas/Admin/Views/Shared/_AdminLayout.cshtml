<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    @* Resolve o problema do localhost na aba *@
    <title>@(ViewData["Title"] ?? "Administração") - Fábrica de Sorrisos</title>

    @* Faz a logo aparecer na aba do navegador *@
    <link rel="icon" type="image/png" href="~/img/logo.png" />
    <link rel="shortcut icon" type="image/png" href="~/img/logo.png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/areas/admin/admin-theme.css" asp-append-version="true" />
    
    <style>
        body, .admin-body { font-family: 'Nunito', sans-serif !important; }
        
        /* Classes utilitárias para o novo design */
        .bg-gradient-primary { background: linear-gradient(135deg, #00BAF6 0%, #0056b3 100%); }
        .bg-gradient-pink { background: linear-gradient(135deg, #F66CD8 0%, #d633b0 100%); }
        .text-blue-dark { color: #000269; }
        
        .form-control:focus {
            border-color: #00BAF6;
            box-shadow: 0 0 0 0.25rem rgba(0, 186, 246, 0.25);
        }
    </style>
</head>
<body class="admin-body">

    <div class="admin-wrapper">
        <nav class="admin-sidebar">
            
            <div class="admin-logo text-center mb-4">
                <img src="~/img/logo.png" alt="Fábrica de Sorrisos" class="img-fluid" style="max-height: 90px;">
                </div>

                <div class="d-flex flex-column flex-grow-1 overflow-auto pe-2">
                
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-grid-fill"></i> Dashboard
                    </a>

                @if (User.IsInRole("Admin") || User.IsInRole("Administrador") || User.IsInRole("ADMINISTRADOR"))
                    {
                        <div class="menu-label">Catálogo</div>
                    
                        <a asp-area="Admin" asp-controller="Brinquedos" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Brinquedos" ? "active" : "")">
                            <i class="bi bi-box-seam-fill"></i> Brinquedos
                        </a>
                    
                        <a asp-area="Admin" asp-controller="Categorias" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categorias" ? "active" : "")">
                            <i class="bi bi-tags-fill"></i> Categorias
                        </a>

                        <a asp-area="Admin" asp-controller="Subcategorias" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Subcategorias" ? "active" : "")">
                            <i class="bi bi-diagram-2-fill"></i> Subcategorias
                        </a>

                        <a asp-area="Admin" asp-controller="Marcas" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Marcas" ? "active" : "")">
                            <i class="bi bi-award-fill"></i> Marcas
                        </a>
                    
                        <a asp-area="Admin" asp-controller="Personagens" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Personagens" ? "active" : "")">
                            <i class="bi bi-emoji-smile-fill"></i> Personagens
                        </a>

                        <div class="menu-label">Vendas</div>

                        <a asp-area="Admin" asp-controller="Pedidos" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Pedidos" ? "active" : "")">
                            <i class="bi bi-receipt"></i> Pedidos
                        </a>

                        <div class="menu-label">Gestão</div>

                        <a asp-area="Admin" asp-controller="Usuarios" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Usuarios" ? "active" : "")">
                            <i class="bi bi-people-fill"></i> Usuários
                        </a>
                    
                        <a asp-area="Admin" asp-controller="Suporte" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Suporte" ? "active" : "")">
                            <i class="bi bi-chat-dots-fill"></i> Suporte
                        </a>
                    
                        <a asp-area="Admin" asp-controller="Feedback" asp-action="Index"
                               class="admin-menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Feedback" ? "active" : "")">
                            <i class="bi bi-star-fill"></i> Avaliações
                        </a>
                    }
                </div>

                <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="admin-menu-item btn-voltar mt-3">
                    <i class="bi bi-door-open-fill"></i> Voltar ao Site
                </a>
            </nav>

            <main class="admin-content">
                @RenderBody()
            </main>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>