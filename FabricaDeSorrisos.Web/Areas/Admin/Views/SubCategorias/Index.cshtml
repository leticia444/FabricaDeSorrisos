@model IEnumerable<FabricaDeSorrisos.Domain.Entities.SubCategoria>
@{
    ViewData["Title"] = "Subcategorias";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/areas/admin/subcategorias.css" />

<div class="subcategorias-container container-fluid p-0">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">Gerenciar Subcategorias</h2>
            <p class="page-subtitle mb-0">Especialize as seções da loja 🌿</p>
        </div>
        <a asp-action="Create" class="btn-gradient-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Nova Subcategoria
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <div class="d-flex align-items-center">
                <i class="bi bi-diagram-2-fill fs-4 me-3"></i>
                <h5 class="card-title-white">Subcategorias Cadastradas</h5>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Categoria Pai</th>
                            <th>Subcategoria</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-light text-dark border fw-normal px-3 py-2 rounded-pill">
                                        <i class="bi bi-tag-fill text-muted me-1"></i>
                                        @(item.Categoria?.Nome ?? "Sem Pai")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-return-right text-success me-2"></i>
                                        <span class="fw-bold fs-6">@item.Nome</span>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon-circle text-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon-circle text-danger" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>