@model IEnumerable<FabricaDeSorrisos.Domain.Entities.Marca>
@{
    ViewData["Title"] = "Marcas";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/areas/admin/marcas.css" />

<div class="marcas-container container-fluid p-0">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">Gerenciar Marcas</h2>
            <p class="page-subtitle mb-0">Parceiros e fabricantes oficiais 🏢</p>
        </div>
        <a asp-action="Create" class="btn-gradient-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Nova Marca
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <div class="d-flex align-items-center">
                <i class="bi bi-award-fill fs-4 me-3"></i>
                <h5 class="card-title-white">Marcas Cadastradas</h5>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Logotipo</th>
                            <th>Nome da Marca</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="logo-wrapper">
                                        <img src="@(item.LogotipoUrl ?? "https://placehold.co/100x100?text=Logo")" class="logo-img">
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold fs-6">@item.Nome</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon-circle text-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                                        <button type="submit" class="btn-icon-circle text-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>