@model FabricaDeSorrisos.Domain.Entities.Marca

<div class="mb-3">
    <label class="form-label fw-bold">Nome da Marca</label>
    <input asp-for="Nome" class="form-control" placeholder="Ex: LEGO" required />
    <span asp-validation-for="Nome" class="text-danger small"></span>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Logotipo</label>

    @if (!string.IsNullOrEmpty(Model.LogotipoUrl))
    {
        <div class="card p-2 mb-2 d-inline-block bg-light border">
            <img src="@Model.LogotipoUrl" style="height: 80px; object-fit: contain;" />
            <div class="text-center mt-1">
                <small class="text-muted">Atual</small>
            </div>
        </div>
        <input type="hidden" asp-for="LogotipoUrl" />
    }

    <input type="file" name="arquivo" class="form-control" accept="image/*" />
    <div class="form-text">Formatos aceitos: JPG, PNG, WEBP.</div>
</div>

<div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary btn-lg">
        <i class="bi bi-check-lg"></i> Salvar Dados
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</div>