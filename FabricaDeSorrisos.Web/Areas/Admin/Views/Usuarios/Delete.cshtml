@model FabricaDeSorrisos.Domain.Entities.Usuario
@{
    ViewData["Title"] = "Banir Usuário"; Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="alert alert-danger text-center">
        <h4 class="fw-bold"><i class="bi bi-exclamation-triangle"></i> Cuidado!</h4>
        <p>Você vai excluir o usuário <strong>@Model.NomeCompleto</strong>.</p>
        <p class="small text-muted">Ele perderá o acesso ao sistema imediatamente.</p>
    </div>

    <form asp-action="Delete" class="d-grid gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">Banir Usuário</button>
        <a asp-action="Index" class="btn btn-light btn-lg border">Cancelar</a>
    </form>
</div>