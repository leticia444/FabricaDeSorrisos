@model FabricaDeSorrisos.Web.Areas.Admin.Controllers.UsuarioFormViewModel

<div class="card-custom p-5">
    <h6 class="label-custom text-uppercase text-muted border-bottom pb-2 mb-4">
        <i class="bi bi-person-lines-fill me-2"></i>Dados da Conta
    </h6>
    
    <div class="row g-3">
        <div class="col-md-6 mb-3">
            <label class="label-custom">Nome Completo</label>
            <input asp-for="NomeCompleto" class="input-custom form-control" placeholder="Ex: João da Silva" required />
            <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
        </div>
        
        <div class="col-md-6 mb-3">
            <label class="label-custom">CPF</label>
            <input asp-for="Cpf" class="input-custom form-control" placeholder="000.000.000-00" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="label-custom">Email (Login)</label>
            <input asp-for="Email" class="input-custom form-control" placeholder="email@exemplo.com" required
                   readonly="@(Model.Id > 0 ? "readonly" : null)" />
            @if (Model.Id > 0)
            {
                <small class="text-muted">O email não pode ser alterado aqui.</small>
            }
        </div>

        <div class="col-md-6 mb-3">
            <label class="label-custom">Perfil de Acesso</label>
            <select asp-for="TipoUsuarioId" class="select-custom form-select" asp-items="ViewBag.Tipos">
                <option value="">Selecione um perfil...</option>
            </select>
        </div>

        @if (Model.Id == 0)
        {
            <div class="col-12 mb-3">
                <label class="label-custom">Senha Inicial</label>
                <input asp-for="Senha" type="password" class="input-custom form-control" placeholder="******" required />
                <div class="form-text">Crie uma senha forte para o usuário.</div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end pt-4">
        <button type="submit" class="btn-gradient-purple">
            <i class="bi bi-check-lg me-2"></i> Salvar Usuário
        </button>
    </div>
</div>