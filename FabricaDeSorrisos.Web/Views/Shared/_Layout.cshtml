    </nav>
                </div>
            </div>

              @* formas de pagamento *@
            <div class="row justify-content-center mb-4">
                <nav class="nav justify-content-center gap-4 text-white footer-social-icons">
                    <i class="bi bi-instagram fs-2"></i><i class="bi bi-facebook fs-2"></i><i class="bi bi-tiktok fs-2"></i><i class="bi bi-envelope-fill fs-2"></i><i class="bi bi-youtube fs-2"></i><i class="bi bi-whatsapp fs-2"></i>
                </nav>
            </div>
            <div class="row text-center mb-3">
                <p class="text-white fw-bold mb-2 small">Formas de pagamento</p>
                <div class="d-flex justify-content-center gap-2">
                    <img src="~/img/credito.png" alt="Cartão" class="img-pagamento" />
                    <img src="~/img/debito.png" alt="Débito" class="img-pagamento" />
                    <img src="~/img/pix.png" alt="Pix" class="img-pagamento" />
                    <img src="~/img/boleto.png" alt="Boleto" class="img-pagamento" />
                </div>
            </div>
            <div class="row text-center border-top border-white border-opacity-25 pt-3">
                <p class="text-white m-0" style="font-size: 0.75rem;">©Fabrica de sorrisos [2026]. Todos os direitos reservados.</p>
            </div>
        </div>
</footer> @* Fim do seu footer rosa *@

    @* RESTAURANDO O CHAT AQUI *@
    @* RESTAURANDO O CHAT E OS SCRIPTS DE LÓGICA *@
    <partial name="_ChatWidget" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @* ESTES DOIS SCRIPTS SÃO ESSENCIAIS PARA OS BOTÕES FUNCIONAREM *@
    <script src="~/js/favoritos.js" asp-append-version="true"></script>
    <script src="~/js/carrinho.js" asp-append-version="true"></script>
    
    @* Script específico do chat *@
    <script src="~/js/chat.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>