<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fábrica de Sorrisos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Cor personalizada (Azul Ciano) */
        .bg-fabrica {
            background-color: #00bfff;
            color: white;
        }

        /* Links do menu de baixo */
        .nav-link-custom {
            color: white;
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            text-decoration: none;
        }

            .nav-link-custom:hover {
                color: #0d47a1; /* Azul escuro no hover */
            }

        /* Ajuste da barra de pesquisa arredondada */
        .search-rounded {
            border-radius: 50px;
            border: none;
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="bg-fabrica py-3">
            <div class="container">
                <div class="row align-items-center">

                    <div class="col-md-3 text-center text-md-start mb-3 mb-md-0">
                        <a class="navbar-brand fw-bold fs-3 text-white" asp-controller="Home" asp-action="Index" style="font-family: 'Comic Sans MS', cursive, sans-serif;">
                            🧸 Fábrica de <span class="text-warning">Sorrisos</span>
                        </a>
                    </div>

                    <div class="col-md-5 mb-3 mb-md-0 position-relative">
                        <form class="d-flex position-relative" role="search" asp-controller="Home" asp-action="Busca" method="get" id="formBuscaPrincipal">
                            <input class="form-control search-rounded py-2 shadow-sm"
                                   type="search"
                                   placeholder="Encontre aqui um mundo de diversão ..."
                                   aria-label="Search"
                                   name="termoBusca"
                                   id="inputBusca"
                                   autocomplete="off">

                            <button class="btn position-absolute end-0 top-50 translate-middle-y me-2 border-0 bg-transparent text-muted" type="submit">
                                <i class="bi bi-search fs-5"></i>
                            </button>
                        </form>
                        <div id="sugestoesBox" class="list-group position-absolute w-100 shadow mt-1" style="z-index: 1000; display: none;"></div>
                    </div>

                    <div class="col-md-4 d-flex justify-content-center justify-content-md-end align-items-center gap-4">

                        <div class="text-end lh-sm">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <small class="d-block">Olá, <strong>@User.Identity.Name</strong></small>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link p-0 text-white text-decoration-none" style="font-size: 0.8rem;">Sair</button>
                                </form>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none d-block small">Olá, acesse sua conta</a>
                                <a asp-controller="Account" asp-action="Register" class="text-white fw-bold text-decoration-none small">ou faça seu cadastro</a>
                            }
                        </div>

                        <a asp-controller="Favoritos" asp-action="Index" class="text-white position-relative text-decoration-none" title="Meus Favoritos">
                            <i class="bi bi-heart-fill fs-3"></i>
                        </a>

                        <a asp-controller="Carrinho" asp-action="Index" class="text-white position-relative text-decoration-none" title="Meu Carrinho">
                            <i class="bi bi-basket2-fill fs-3"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-white" style="font-size: 0.6rem;">
                                <span class="badge-carrinho">0</span>
                            </span>
                        </a>

                    </div>
                </div>
            </div>
        </div>

        <div class="bg-fabrica border-top border-white border-opacity-25 shadow-sm">
            <div class="container">
                <nav class="nav justify-content-center justify-content-md-between py-2 flex-wrap">

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="1">Brinquedos</a>

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="2">Educativos</a>

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Busca">Por Idade</a>

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="4">Pets</a>

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="3">Jogos</a>

                    <a class="nav-link-custom text-warning fw-bold" asp-controller="Home" asp-action="Index">Ofertas</a>

                    <a class="nav-link-custom" asp-controller="Home" asp-action="Privacy">Sobre Nós</a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Gerente"))
                    {
                        <a class="nav-link-custom bg-white text-primary rounded px-3 ms-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-gear-fill me-1"></i> Área do Admin
                        </a>
                    }
                </nav>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 pt-3 text-center bg-light">
        <div class="container py-3">
            &copy; 2026 - <strong>Fábrica de Sorrisos</strong> 🧸 - <a href="#">Privacidade</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/favoritos.js" asp-append-version="true"></script>
    <script src="~/js/carrinho.js" asp-append-version="true"></script>
    <partial name="_ChatWidget" />
    <script src="~/js/chat.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>