<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fábrica de Sorrisos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/shared.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top shadow-sm">
        @* Barra Superior *@
        <div class="bg-fabrica py-3">
            <div class="container">
                <div class="row align-items-center">
                    @* Logo Oficial - Estilizada via shared.css *@
                    <div class="col-md-3 text-center text-md-start mb-3 mb-md-0">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/img/logo.png" alt="Logo Fábrica de Sorrisos" class="nav-logo" />
                        </a>
                    </div>

                    @* Barra de Busca *@
                    <div class="col-md-5 mb-3 mb-md-0 position-relative">
                        <form class="d-flex position-relative" role="search" asp-controller="Home" asp-action="Busca" method="get" id="formBuscaPrincipal">
                            <input class="form-control search-rounded py-2 shadow-sm"
                                   type="search"
                                   placeholder="Encontre aqui um mundo de diversão ..."
                                   aria-label="Search"
                                   name="termoBusca"
                                   id="inputBusca"
                                   autocomplete="off">
                            <button class="btn btn-lupa-custom" type="submit">
                                <i class="bi bi-search fs-5"></i>
                            </button>
                        </form>
                    </div>

                    @* Login, Ícones e Área Admin *@
                    <div class="col-md-4 d-flex justify-content-center justify-content-md-end align-items-center gap-3">
                        <div class="text-end lh-sm">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="d-flex flex-column align-items-end">
                                    <small class="text-white">Olá, <strong>@User.Identity.Name</strong></small>
                                    <div class="d-flex gap-2">
                                        @if (User.IsInRole("Admin") || User.IsInRole("Gerente"))
                                        {
                                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="badge-admin-header">ÁREA ADMIN</a>
                                        }
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-link p-0 text-white text-decoration-none" style="font-size: 0.8rem;">Sair</button>
                                        </form>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none d-block small">Olá, acesse sua conta</a>
                                <a asp-controller="Account" asp-action="Register" class="text-white fw-bold text-decoration-none small">ou faça seu cadastro</a>
                            }
                        </div>
                        <a asp-controller="Favoritos" asp-action="Index" class="fav-icon text-decoration-none">
                            <i class="bi bi-heart-fill fs-3"></i>
                        </a>
                        <a asp-controller="Carrinho" asp-action="Index" class="text-white position-relative text-decoration-none">
                            <i class="bi bi-basket2-fill fs-3"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-white" style="font-size: 0.6rem;">
                                <span class="badge-carrinho">0</span>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @* Menu de Categorias *@
        <div class="bg-fabrica border-top border-white border-opacity-25 shadow-sm">
            <div class="container">
                <nav class="nav justify-content-center justify-content-md-between py-2 flex-wrap">
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "1" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="1">Brinquedos</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "2" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="2">Educativos</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "4" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="4">Pets</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "3" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="3">Jogos</a>
                    <a class="nav-link-custom text-warning fw-bold @(Context.Request.Query["ofertas"] == "true" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-ofertas="true">Ofertas</a>
                    <a class="nav-link-custom @(Context.Request.Path.Value.Contains("Privacy") ? "active" : "")" asp-controller="Home" asp-action="Privacy">Sobre Nós</a>
                </nav>
            </div>
        </div>
    </header>

    @* --- CARROSSEL EXCLUSIVO DA HOME --- *@
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <div id="carouselHome" class="carousel slide shadow-sm" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="2"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/caroussel1.png" class="d-block w-100" alt="Destaque 1">
                </div>
                <div class="carousel-item">
                    <img src="~/img/caroussel2.jpg" class="d-block w-100" alt="Destaque 2">
                </div>
                <div class="carousel-item">
                    <img src="~/img/caroussel3.jpg" class="d-block w-100" alt="Destaque 3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselHome" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselHome" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>
    }

    <div class="container content-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-fabrica">
        <div class="container">
            <div class="row align-items-center py-4">
                <div class="col-md-6 text-center text-md-start">
                    <img src="~/img/logo.png" alt="Logo" class="footer-logo" />
                </div>
                <div class="col-md-6 text-center text-md-end text-white slogan-footer">
                    <h3 class="fw-bold m-0">Espalhando alegria através de brinquedos</h3>
                </div>
            </div>
            <div class="row justify-content-center py-2">
                <nav class="nav justify-content-center flex-wrap gap-4 text-white footer-social-icons">
                    <i class="bi bi-instagram fs-2"></i>
                    <i class="bi bi-facebook fs-2"></i>
                    <i class="bi bi-tiktok fs-2"></i>
                    <i class="bi bi-envelope-fill fs-2"></i>
                    <i class="bi bi-youtube fs-2"></i>
                    <i class="bi bi-whatsapp fs-2"></i>
                </nav>
            </div>
            <div class="row text-center py-2">
                <p class="text-white fw-bold mb-2">Formas de pagamento</p>
                <div class="d-flex justify-content-center gap-3">
                    <img src="~/img/cartao.png" alt="Cartão" class="img-pagamento" />
                    <img src="~/img/pix.png" alt="PIX" class="img-pagamento" />
                    <img src="~/img/boleto.png" alt="Boleto" class="img-pagamento" />
                </div>
            </div>
            <div class="row text-center pt-3 pb-2">
                <p class="text-white small mb-0">©Fabrica de sorrisos [2026]. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <partial name="_ChatWidget" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    <script src="~/js/carrinho.js" asp-append-version="true"></script>
     <script src="~/js/favoritos.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>