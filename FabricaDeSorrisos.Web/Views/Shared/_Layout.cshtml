<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fábrica de Sorrisos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/shared.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top shadow-sm">
        @* Barra Superior *@
        <div class="bg-fabrica py-3">
            <div class="container">
                <div class="row align-items-center">
                    @* Logo *@
                    <div class="col-md-3 text-center text-md-start mb-3 mb-md-0">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/img/logo.png" alt="Logo Fábrica de Sorrisos" class="nav-logo" />
                        </a>
                    </div>

                    @* Barra de Busca *@
                    <div class="col-md-5 mb-3 mb-md-0 position-relative">
                        <form class="d-flex position-relative" role="search" asp-controller="Home" asp-action="Busca" method="get" id="formBuscaPrincipal">
                            <input class="form-control search-rounded py-2 shadow-sm"
                                   type="search"
                                   placeholder="Encontre aqui um mundo de diversão ..."
                                   aria-label="Search"
                                   name="termoBusca"
                                   id="inputBusca"
                                   autocomplete="off">
                            <button class="btn btn-lupa-custom" type="submit">
                                <i class="bi bi-search fs-5"></i>
                            </button>
                        </form>
                    </div>

                    @* Login e Ícones *@
                    <div class="col-md-4 d-flex justify-content-center justify-content-md-end align-items-center">

                        @* Área do Usuário com margem à direita *@
                        <div class="text-end lh-sm user-area-header">
                            @if (User.Identity.IsAuthenticated)
                            {
                                var nomeUsuario = User.Identity.Name.Split('@')[0];
                                <div class="d-flex flex-column align-items-end">
                                    <small class="text-white">Olá, <strong>@nomeUsuario</strong></small>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm mt-1 fw-bold text-white px-3 rounded-pill"
                                                style="background-color: #000269; font-size: 0.75rem; border: none;">
                                            Sair
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none d-block small">Olá, acesse sua conta</a>
                                <a asp-controller="Account" asp-action="Register" class="text-white fw-bold text-decoration-none small">ou faça seu cadastro</a>
                            }
                        </div>

                        @* Ícones com espaçamento padronizado *@
                        <a asp-controller="Favoritos" asp-action="Index" class="fav-icon text-decoration-none nav-icon-spacing">
                            <i class="bi bi-heart-fill fs-3"></i>
                        </a>

                        <a asp-controller="Carrinho" asp-action="Index" class="text-white position-relative text-decoration-none nav-icon-spacing">
                            <i class="bi bi-basket2-fill fs-3"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-white" style="font-size: 0.6rem;">
                                <span class="badge-carrinho">0</span>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @* Menu de Categorias *@
        <div class="bg-fabrica border-top border-white border-opacity-25 shadow-sm">
            <div class="container">
                <nav class="nav justify-content-center justify-content-md-between py-2 flex-wrap align-items-center">
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "1" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="1">Brinquedos</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "2" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="2">Educativos</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "4" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="4">Pets</a>
                    <a class="nav-link-custom @(Context.Request.Query["categoriaId"] == "3" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="3">Jogos</a>
                    <a class="nav-link-custom text-warning fw-bold @(Context.Request.Query["ofertas"] == "true" ? "active" : "")" asp-controller="Home" asp-action="Busca" asp-route-ofertas="true">Ofertas</a>
                    <a class="nav-link-custom @(Context.Request.Path.Value.Contains("Privacy") ? "active" : "")" asp-controller="Home" asp-action="Privacy">Sobre Nós</a>

                    @* Botão Área Admin aparece aqui se for autorizado *@
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Gerente")))
                    {
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="btn btn-warning rounded-pill fw-bold px-3 text-dark ms-2"
                           style="background-color: #f3dd24; font-size: 0.8rem; border: none; height: fit-content;">
                            ÁREA ADMIN
                        </a>
                    }
                </nav>
            </div>
        </div>
    </header>

    <div class="container content-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-fabrica">
        <div class="container text-center">
            @* Logo Footer *@
            <div class="row justify-content-center mb-3">
                <div class="col-12">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" alt="Logo" class="footer-logo" />
                    </a>
                </div>
            </div>

            @* Slogan *@
            <div class="row justify-content-center mb-4">
                <div class="col-12 text-white slogan-footer">
                    <h3 class="fw-bold m-0" style="font-size: 1.2rem;">Espalhando alegria através de brinquedos</h3>
                </div>
            </div>

            @* Links Footer *@
            <div class="row justify-content-center mb-3">
                <div class="col-12">
                    <nav class="nav justify-content-center gap-3 text-white flex-wrap">
                        <a class="text-white text-decoration-none small fw-bold" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="1">BRINQUEDOS</a>
                        <a class="text-white text-decoration-none small fw-bold" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="2">EDUCATIVOS</a>
                        <a class="text-white text-decoration-none small fw-bold" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="4">PETS</a>
                        <a class="text-white text-decoration-none small fw-bold" asp-controller="Home" asp-action="Busca" asp-route-categoriaId="3">JOGOS</a>
                        <a class="text-white text-decoration-none small fw-bold text-warning" asp-controller="Home" asp-action="Busca" asp-route-ofertas="true">OFERTAS</a>
                        <a class="text-white text-decoration-none small fw-bold" asp-controller="Home" asp-action="Privacy">SOBRE NÓS</a>
                    </nav>
                </div>
            </div>

            @* Redes Sociais *@
            <div class="row justify-content-center mb-4">
                <nav class="nav justify-content-center gap-4 text-white footer-social-icons">
                    <i class="bi bi-instagram fs-2"></i>
                    <i class="bi bi-facebook fs-2"></i>
                    <i class="bi bi-tiktok fs-2"></i>
                    <i class="bi bi-envelope-fill fs-2"></i>
                    <i class="bi bi-youtube fs-2"></i>
                    <i class="bi bi-whatsapp fs-2"></i>
                </nav>
            </div>

            @* Pagamento *@
            <div class="row text-center mb-3">
                <p class="text-white fw-bold mb-2 small">Formas de pagamento</p>
                <div class="d-flex justify-content-center gap-2">
                    <img src="~/img/credito.png" alt="Cartão" class="img-pagamento" />
                    <img src="~/img/debito.png" alt="PIX" class="img-pagamento" />
                    <img src="~/img/pix.png" alt="Boleto" class="img-pagamento" />
                    <img src="~/img/boleto.png" alt="Boleto" class="img-pagamento" />
                </div>
            </div>

            @* Copyright *@
            <div class="row text-center border-top border-white border-opacity-25 pt-3">
                <p class="text-white m-0" style="font-size: 0.75rem;">©Fabrica de sorrisos [2026]. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <partial name="_ChatWidget" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    <script src="~/js/carrinho.js" asp-append-version="true"></script>
    <script src="~/js/favoritos.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>