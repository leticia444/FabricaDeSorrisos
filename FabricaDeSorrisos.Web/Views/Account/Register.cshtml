@model FabricaDeSorrisos.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-success">Crie sua Conta 🚀</h2>

                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">Nome Completo</label>
                            <input asp-for="NomeCompleto" class="form-control" placeholder="Ex: Maria Silva" />
                            <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">E-mail</label>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Senha</label>
                                <input asp-for="Senha" class="form-control" placeholder="******" />
                                <span asp-validation-for="Senha" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Confirmar Senha</label>
                                <input asp-for="ConfirmarSenha" class="form-control" placeholder="******" />
                                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success btn-lg">Criar Conta</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">Já tem conta? <a asp-action="Login" class="fw-bold">Faça login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>