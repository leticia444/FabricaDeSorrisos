@model Pedido
@{
    ViewData["Title"] = "Pedido Confirmado";
}

<link rel="stylesheet" href="~/css/pedido-confirmado.css" />

<div class="bg-success-page">
    <div class="container d-flex justify-content-center">
        
        <div class="card-confirmacao p-4 p-md-5">
            <div class="confetti-bg"></div>
            
            <div class="position-relative" style="z-index: 2; text-align: center;">
                
                <div class="success-icon-container mb-3">
                    <i class="bi bi-check-lg text-white"></i>
                </div>
                
                <h1 class="mb-2" style="color: #28a745;">Pedido Confirmado! 🐻</h1>
                <p class="text-muted mb-4">
                    O pedido <strong style="color: #000269;">#@Model.Id.ToString("D6")</strong> foi processado. Já estamos a preparar tudo! ✨
                </p>
                
                <div class="resumo-box text-start mx-auto mb-4">
                    <div class="d-flex justify-content-between border-bottom border-light pb-2 mb-2">
                        <span class="text-muted fw-bold small text-uppercase">Pagamento</span>
                        <span class="text-dark fw-bold">@Model.FormaPagamento</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted fw-bold small text-uppercase">Total Pago</span>
                        <span class="total-pago-valor">R$ @Model.ValorTotal.ToString("N2")</span>
                    </div>
                </div>
                
                <div class="d-grid gap-2 mx-auto" style="max-width: 320px;">
                    <a asp-controller="Pedidos" asp-action="Index" class="btn btn-gradient-blue-success">
                        <i class="bi bi-box-seam me-2"></i> Acompanhar Meu Pedido
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-link btn-sm text-decoration-none fw-bold text-muted mt-1">
                        <i class="bi bi-arrow-left me-1"></i> Voltar para a Loja
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>