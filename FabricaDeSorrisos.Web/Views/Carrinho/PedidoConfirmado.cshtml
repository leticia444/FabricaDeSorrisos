@model Pedido
@{
    ViewData["Title"] = "Pedido Confirmado";
}

<div class="container py-5 text-center">
    <div class="card border-0 shadow-sm mx-auto p-5" style="max-width: 600px;">
        <div class="mb-4">
            <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-4">
                <i class="bi bi-check-lg text-success display-1"></i>
            </div>
        </div>
        <h2 class="fw-bold text-success mb-3">Oba! Pedido Confirmado! 🐻</h2>
        <p class="text-muted fs-5">Pedido <strong>#@Model.Id.ToString("D6")</strong> realizado com sucesso.</p>
        <hr class="my-4">
        <div class="d-flex justify-content-between mb-2"><span>Forma de Pagamento:</span><strong>@Model.FormaPagamento</strong></div>
        <div class="d-flex justify-content-between mb-4"><span>Valor Total:</span><strong class="text-primary fs-4">R$ @Model.ValorTotal.ToString("N2")</strong></div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Continuar Comprando</a>
    </div>
</div>