@model FabricaDeSorrisos.Web.Models.CarrinhoViewModel
@{
    ViewData["Title"] = "Meu Carrinho";
}

<div class="container py-5">

    @if (TempData["Aviso"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Aviso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle-fill me-2"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <h2 class="fw-bold mb-4">🛒 Meu Carrinho</h2>

    @if (!Model.Itens.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <i class="bi bi-cart-x fs-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Seu carrinho está vazio.</h3>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Ir às Compras</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Produto</th>
                                    <th class="text-center">Qtd</th>
                                    <th class="text-end pe-4">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Itens)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="@(item.Brinquedo.ImagemUrl ?? "https://placehold.co/60")"
                                                     class="rounded me-3" style="width: 50px; height: 50px; object-fit: contain;">
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@item.Brinquedo.Nome</h6>
                                                    <small class="text-muted">R$ @item.Brinquedo.Preco.ToString("N2")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <form asp-action="AtualizarQuantidade" method="post" class="d-flex justify-content-center align-items-center">
                                                <input type="hidden" name="brinquedoId" value="@item.BrinquedoId" />
                                                <button type="submit" name="quantidade" value="@(item.Quantidade - 1)" class="btn btn-sm btn-light border rounded-circle"><i class="bi bi-dash"></i></button>
                                                <span class="mx-2 fw-bold" style="width: 20px;">@item.Quantidade</span>
                                                <button type="submit" name="quantidade" value="@(item.Quantidade + 1)" class="btn btn-sm btn-light border rounded-circle"><i class="bi bi-plus"></i></button>
                                            </form>
                                        </td>
                                        <td class="text-end fw-bold pe-4">R$ @((item.Quantidade * item.Brinquedo.Preco).ToString("N2"))</td>
                                        <td class="text-end">
                                            <a asp-action="Remover" asp-route-itemId="@item.BrinquedoId" class="text-danger"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Resumo</h5>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">Total</span>
                            <span class="fs-4 fw-bold text-primary">R$ @Model.Total.ToString("N2")</span>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-action="Checkout" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-credit-card-2-front me-2"></i> Ir para Pagamento
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Continuar Comprando</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>