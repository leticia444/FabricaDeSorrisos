@model FabricaDeSorrisos.Web.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Finalizar Compra";
}

<form asp-action="ProcessarPedido" method="post">
    <div class="container py-5">
        <h2 class="fw-bold mb-4">📦 Finalizar Compra</h2>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-white fw-bold py-3">1. Entrega</div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">CEP</label>
                                <div class="input-group">
                                    <input type="text" asp-for="CEP" class="form-control" id="inputCep" placeholder="00000-000">
                                    <button class="btn btn-outline-secondary" type="button" onclick="calcularFrete()">Calcular</button>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Endereço</label>
                                <input type="text" asp-for="Endereco" class="form-control" placeholder="Rua, Número...">
                            </div>
                            <div class="col-12"><small class="text-muted" id="msgFrete">Digite o CEP para calcular.</small></div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold py-3">2. Pagamento</div>
                    <div class="card-body">
                        <ul class="nav nav-pills mb-3" id="pills-tab">
                            <li class="nav-item"><button class="nav-link active" type="button" onclick="setPag('Pix')" data-bs-toggle="pill" data-bs-target="#pix">Pix ⚡</button></li>
                            <li class="nav-item"><button class="nav-link" type="button" onclick="setPag('Cartao')" data-bs-toggle="pill" data-bs-target="#cartao">Cartão 💳</button></li>
                            <li class="nav-item"><button class="nav-link" type="button" onclick="setPag('Boleto')" data-bs-toggle="pill" data-bs-target="#boleto">Boleto 📄</button></li>
                        </ul>
                        <input type="hidden" asp-for="FormaPagamento" id="inputPagamento" value="Pix">

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="pix"><div class="alert alert-success bg-opacity-10">Aprovação imediata!</div></div>
                            <div class="tab-pane fade" id="cartao"><input type="text" class="form-control" placeholder="Número do Cartão"></div>
                            <div class="tab-pane fade" id="boleto"><p class="text-muted">Até 3 dias úteis.</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Resumo</h5>
                        <ul class="list-group list-group-flush mb-3 bg-transparent">
                            @foreach (var item in Model.Itens)
                            {
                                <li class="list-group-item bg-transparent d-flex justify-content-between px-0">
                                    <span>@item.Quantidade x @item.Brinquedo.Nome</span>
                                    <span>R$ @((item.Quantidade * item.Brinquedo.Preco).ToString("N2"))</span>
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-between"><span>Subtotal</span><strong>R$ @Model.Subtotal.ToString("N2")</strong></div>
                        <div class="d-flex justify-content-between text-muted"><span>Frete</span><span id="txtFrete">R$ 0,00</span></div>
                        <hr>
                        <div class="d-flex justify-content-between fs-5 fw-bold"><span>Total</span><span id="txtTotal" class="text-primary">R$ @Model.Subtotal.ToString("N2")</span></div>

                        <input type="hidden" asp-for="ValorFrete" id="inputValorFrete" value="0">
                        <button type="submit" class="btn btn-success w-100 btn-lg mt-4 shadow-sm">Confirmar Pedido</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    function setPag(tipo) { document.getElementById('inputPagamento').value = tipo; }

    async function calcularFrete() {
        const cep = document.getElementById('inputCep').value;
        if(cep.length < 8) { alert("CEP inválido"); return; }

        const response = await fetch('/Carrinho/CalcularFrete', {
            method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(cep)
        });
        const data = await response.json();

        document.getElementById('txtFrete').innerText = "R$ " + data.valor.toFixed(2);
        document.getElementById('msgFrete').innerText = "Prazo: " + data.prazo;
        document.getElementById('inputValorFrete').value = data.valor;

        const subtotal = @Model.Subtotal.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
        document.getElementById('txtTotal').innerText = "R$ " + (subtotal + data.valor).toFixed(2);
    }
</script>