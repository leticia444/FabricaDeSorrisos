@model FabricaDeSorrisos.Web.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Finalizar Compra";
}

<form asp-action="ProcessarPedido" method="post">
    <input type="hidden" id="subtotalInicial" value="@Model.Subtotal.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" />

    <div class="container py-5">
        <h2 class="fw-bold mb-4">📦 Finalizar Compra</h2>

        <div class="row">
            <div class="col-md-8">
                
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-white fw-bold py-3">1. Dados Pessoais</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">CPF</label>
                                <input type="text" asp-for="CPF" class="form-control" id="inputCpf" placeholder="000.000.000-00" maxlength="14" onkeyup="mascaraCPF(this)">
                                    <span asp-validation-for="CPF" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4 shadow-sm border-0">
                        <div class="card-header bg-white fw-bold py-3">2. Endereço de Entrega</div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">CEP</label>
                                    <div class="input-group">
                                        <input type="text" asp-for="CEP" class="form-control" id="inputCep" placeholder="00000-000" maxlength="9" onblur="buscarEnderecoViaCep()">
                                            <button class="btn btn-outline-secondary" type="button" onclick="buscarEnderecoViaCep()">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="CEP" class="text-danger small"></span>
                                    </div>
                            
                                    <div class="col-md-6">
                                        <label class="form-label">Cidade</label>
                                        <input type="text" asp-for="Cidade" id="inputCidade" class="form-control bg-light" readonly>
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label">UF</label>
                                            <input type="text" asp-for="UF" id="inputUf" class="form-control bg-light" readonly>
                                            </div>

                                            <div class="col-md-9">
                                                <label class="form-label">Rua / Logradouro</label>
                                                <input type="text" asp-for="Logradouro" id="inputLogradouro" class="form-control bg-light" readonly>
                                                </div>

                                                <div class="col-md-3">
                                                    <label class="form-label">Número</label>
                                                    <input type="text" asp-for="Numero" id="inputNumero" class="form-control" placeholder="Ex: 123">
                                                        <span asp-validation-for="Numero" class="text-danger small"></span>
                                                    </div>

                                                    <div class="col-md-5">
                                                        <label class="form-label">Bairro</label>
                                                        <input type="text" asp-for="Bairro" id="inputBairro" class="form-control bg-light" readonly>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <label class="form-label">Complemento <small class="text-muted">(Opcional)</small></label>
                                                            <input type="text" asp-for="Complemento" class="form-control" placeholder="Ex: Apto 101, Bloco B">
                                                            </div>

                                                            <div class="col-12">
                                                                <small class="text-muted fw-bold" id="msgFrete"></small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="card shadow-sm border-0">
                                                    <div class="card-header bg-white fw-bold py-3">3. Pagamento</div>
                                                    <div class="card-body">
                                                        <ul class="nav nav-pills mb-3" id="pills-tab">
                                                            <li class="nav-item"><button class="nav-link active" type="button" onclick="setPag('Pix')" data-bs-toggle="pill" data-bs-target="#pix">Pix ⚡</button></li>
                                                            <li class="nav-item"><button class="nav-link" type="button" onclick="setPag('Cartao')" data-bs-toggle="pill" data-bs-target="#cartao">Cartão 💳</button></li>
                                                            <li class="nav-item"><button class="nav-link" type="button" onclick="setPag('Boleto')" data-bs-toggle="pill" data-bs-target="#boleto">Boleto 📄</button></li>
                                                        </ul>
                                                        <input type="hidden" asp-for="FormaPagamento" id="inputPagamento" value="Pix">

                                                            <div class="tab-content">
                                                                <div class="tab-pane fade show active" id="pix"><div class="alert alert-success bg-opacity-10">Aprovação imediata! Chave gerada na próxima tela.</div></div>
                                                                <div class="tab-pane fade" id="cartao"><input type="text" class="form-control" placeholder="Número do Cartão (Simulação)"></div>
                                                                <div class="tab-pane fade" id="boleto"><p class="text-muted">Vencimento em 3 dias úteis.</p></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="card shadow-sm border-0 bg-light position-sticky" style="top: 20px;">
                                                        <div class="card-body">
                                                            <h5 class="fw-bold mb-3">Resumo do Pedido</h5>
                                                            <ul class="list-group list-group-flush mb-3 bg-transparent">
                                                                @foreach (var item in Model.Itens)
                                                                {
                                                                    <li class="list-group-item bg-transparent d-flex justify-content-between px-0">
                                                                        <span><small>@item.Quantidade x</small> @item.Brinquedo.Nome</span>
                                                                        <span>R$ @((item.Quantidade * item.Brinquedo.Preco).ToString("N2"))</span>
                                                                    </li>
                                                                }
                                                            </ul>
                                                            <div class="d-flex justify-content-between"><span>Subtotal</span><strong>R$ @Model.Subtotal.ToString("N2")</strong></div>
                                                            <div class="d-flex justify-content-between text-muted"><span>Frete</span><span id="txtFrete">R$ 0,00</span></div>
                                                            <hr>
                                                            <div class="d-flex justify-content-between fs-5 fw-bold"><span>Total</span><span id="txtTotal" class="text-primary">R$ @Model.Subtotal.ToString("N2")</span></div>

                                                            <input type="hidden" asp-for="ValorFrete" id="inputValorFrete" value="0">
                                                                <button type="submit" class="btn btn-success w-100 btn-lg mt-4 shadow-sm fw-bold">
                                                                    <i class="bi bi-check-circle-fill me-2"></i> Confirmar Pedido
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>

                                        @section Scripts {
                                            <script src="~/js/checkout.js" asp-append-version="true"></script>
                                        }