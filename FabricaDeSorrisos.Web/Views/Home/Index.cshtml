@model FabricaDeSorrisos.Web.Models.CatalogViewModel
@{
    ViewData["Title"] = "Catálogo de Brinquedos";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-funnel-fill me-2"></i> Filtros
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" id="formFiltros">
                        @if (!string.IsNullOrEmpty(Model.TermoBusca))
                        {
                            <input type="hidden" asp-for="TermoBusca" />
                            <div class="alert alert-light border mb-3 p-2 small d-flex justify-content-between align-items-center">
                                <span>Busca: <strong>@Model.TermoBusca</strong></span>
                                <a asp-action="Index" class="text-danger text-decoration-none fw-bold">&times;</a>
                            </div>
                        }

                        <h6 class="fw-bold mt-2">Categorias</h6>
                        <div class="d-grid gap-1 mb-3">
                            <a asp-route-categoriaId="" class="btn btn-sm text-start @(Model.CategoriaId == null ? "btn-secondary text-white" : "btn-outline-light text-dark")">
                                Todas
                            </a>
                            @foreach (var cat in Model.Categorias)
                            {
                                <a asp-route-categoriaId="@cat.Id"
                                   class="btn btn-sm text-start @(Model.CategoriaId == cat.Id ? "btn-primary" : "btn-outline-light text-dark")">
                                    @cat.Nome
                                </a>
                            }
                        </div>

                        <h6 class="fw-bold">Marca</h6>
                        <select asp-for="MarcaId" class="form-select form-select-sm mb-3" onchange="this.form.submit()">
                            <option value="">Todas as Marcas</option>
                            @foreach (var marca in Model.Marcas)
                            {
                                <option value="@marca.Id">@marca.Nome</option>
                            }
                        </select>

                        <h6 class="fw-bold">Idade</h6>
                        <select asp-for="FaixaEtariaId" class="form-select form-select-sm mb-3" onchange="this.form.submit()">
                            <option value="">Qualquer Idade</option>
                            @foreach (var faixa in Model.FaixasEtarias)
                            {
                                <option value="@faixa.Id">@faixa.Descricao</option>
                            }
                        </select>

                        <h6 class="fw-bold">Personagem</h6>
                        <select asp-for="PersonagemId" class="form-select form-select-sm mb-3" onchange="this.form.submit()">
                            <option value="">Todos</option>
                            @foreach (var p in Model.Personagens)
                            {
                                <option value="@p.Id">@p.Nome</option>
                            }
                        </select>

                        <div class="d-grid mt-3">
                            <a asp-action="Index" class="btn btn-outline-danger btn-sm">Limpar Filtros</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-9">

            <div class="d-flex justify-content-between align-items-center mb-3 bg-white p-3 rounded shadow-sm">
                <span class="text-muted small">Mostrando <strong>@Model.Produtos?.Items.Count()</strong> de <strong>@Model.Produtos?.TotalCount</strong> brinquedos</span>

                <form asp-action="Index" method="get" class="d-flex" style="max-width: 300px;">
                    <input class="form-control form-control-sm me-2" type="search" placeholder="O que você procura?" name="termoBusca" value="@Model.TermoBusca">
                    <button class="btn btn-outline-primary btn-sm" type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @if (Model.Produtos != null && Model.Produtos.Items.Any())
                {
                    @foreach (var item in Model.Produtos.Items)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0 position-relative hover-card">

                                <div class="text-center p-3 bg-light rounded-top position-relative overflow-hidden">
                                    <img src="@(item.ImagemUrl ?? "https://placehold.co/200?text=Sem+Foto")"
                                         class="img-fluid transition-scale"
                                         alt="@item.Nome"
                                         style="height: 180px; object-fit: contain;">
                                </div>

                                <button class="btn btn-light rounded-circle position-absolute top-0 end-0 m-2 shadow-sm btn-favorito"
                                        style="z-index: 10;"
                                        onclick="toggleFavorito(this, @item.Id)"
                                        data-auth="@User.Identity.IsAuthenticated.ToString().ToLower()"
                                        title="Favoritar">
                                    <i class="bi bi-heart fs-5 text-secondary"></i>
                                </button>

                                <div class="card-body d-flex flex-column">
                                    <div class="mb-2">
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary" style="font-size: 0.7rem;">@item.Categoria</span>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary" style="font-size: 0.7rem;">@item.Marca</span>
                                    </div>

                                    <h5 class="card-title text-truncate fw-bold" title="@item.Nome">@item.Nome</h5>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="fs-4 fw-bold text-primary">R$ @item.Preco.ToString("N2")</span>

                                            @if (item.Estoque > 0)
                                            {
                                                <small class="text-success fw-bold"><i class="bi bi-check-circle-fill"></i> Estoque</small>
                                            }
                                            else
                                            {
                                                <small class="text-danger fw-bold"><i class="bi bi-x-circle-fill"></i> Esgotado</small>
                                            }
                                        </div>

                                        @if (item.Estoque > 0)
                                        {
                                            <button class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm"
                                                    onclick="adicionarAoCarrinho(this, @item.Id)">
                                                <i class="bi bi-cart-plus me-1"></i> Adicionar
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary w-100 rounded-pill disabled">
                                                Indisponível
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <div class="py-5 bg-light rounded-3">
                            <i class="bi bi-emoji-frown fs-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">Ops! Nenhum brinquedo encontrado.</h4>
                            <p class="text-muted">Tente mudar os filtros ou buscar por outra coisa.</p>
                            <a asp-action="Index" class="btn btn-primary mt-2">Limpar tudo</a>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Produtos != null && Model.Produtos.TotalPages > 1)
            {
                <nav class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageIndex="@(Model.PageIndex - 1)"
                               asp-route-termoBusca="@Model.TermoBusca"
                               asp-route-marcaId="@Model.MarcaId"
                               asp-route-categoriaId="@Model.CategoriaId"
                               asp-route-faixaEtariaId="@Model.FaixaEtariaId"
                               asp-route-personagemId="@Model.PersonagemId">Anterior</a>
                        </li>

                        @for (int i = 1; i <= Model.Produtos.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                <a class="page-link" asp-route-pageIndex="@i"
                                   asp-route-termoBusca="@Model.TermoBusca"
                                   asp-route-marcaId="@Model.MarcaId"
                                   asp-route-categoriaId="@Model.CategoriaId"
                                   asp-route-faixaEtariaId="@Model.FaixaEtariaId"
                                   asp-route-personagemId="@Model.PersonagemId">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PageIndex == Model.Produtos.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageIndex="@(Model.PageIndex + 1)"
                               asp-route-termoBusca="@Model.TermoBusca"
                               asp-route-marcaId="@Model.MarcaId"
                               asp-route-categoriaId="@Model.CategoriaId"
                               asp-route-faixaEtariaId="@Model.FaixaEtariaId"
                               asp-route-personagemId="@Model.PersonagemId">Próximo</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<style>
    /* Efeitinho de Hover no Card */
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
    /* Efeito na Imagem */
    .transition-scale {
        transition: transform 0.3s ease;
    }

    .hover-card:hover .transition-scale {
        transform: scale(1.05);
    }
</style>