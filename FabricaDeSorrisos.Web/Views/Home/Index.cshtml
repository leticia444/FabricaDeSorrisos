@model FabricaDeSorrisos.Web.Models.CatalogViewModel
@{
    ViewData["Title"] = "Bem-vindo à Fábrica";
}

@* --- BLOCO DO CARROSSEL (LARGURA TOTAL 100%) --- *@
@* A altura de 690px agora é controlada pelo arquivo shared.css *@
<div id="carouselHome" class="carousel slide shadow-sm" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/caroussel1.jpg" class="d-block w-100" alt="Destaque 1">
        </div>
        <div class="carousel-item">
            <img src="~/img/caroussel2.jpg" class="d-block w-100" alt="Destaque 2">
        </div>
        <div class="carousel-item">
            <img src="~/img/caroussel3.png" class="d-block w-100" alt="Destaque 3">
        </div>
    </div>
    @* Botões de navegação lateral (Anterior/Próximo) *@
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselHome" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselHome" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>


<div class="container">
    @* Seção de Categorias *@
    @* --- SEÇÃO DE CATEGORIAS ATUALIZADA (APENAS IMAGENS) --- *@
    <div class="row justify-content-center text-center g-4 mb-5">
        @* Coluna para a categoria Brinquedos *@
        <div class="col-6 col-md-2">
            @* Link que redireciona para a busca filtrada pela categoria ID 1 *@
            <a asp-action="Busca" asp-route-categoriaId="1" class="text-decoration-none">
                @* Container do card removendo preenchimentos (p-0) e bordas para focar na imagem *@
                <div class="cat-card shadow-sm hover-scale p-0 border-0">
                    @* Imagem da categoria com bordas arredondadas e ajuste responsivo *@
                    <img src="~/img/brinquedos.png" class="img-fluid rounded-4" alt="Brinquedos">
                </div>
            </a>
        </div>

        @* Coluna para a categoria Educativos *@
        <div class="col-6 col-md-2">
            @* Link que redireciona para a busca filtrada pela categoria ID 2 *@
            <a asp-action="Busca" asp-route-categoriaId="2" class="text-decoration-none">
                @* Container do card com efeito de sombra e escala ao passar o mouse *@
                <div class="cat-card shadow-sm hover-scale p-0 border-0">
                    @* Imagem da categoria Educativos *@
                    <img src="~/img/educativos.png" class="img-fluid rounded-4" alt="Educativos">
                </div>
            </a>
        </div>

        @* Coluna para a categoria Pets *@
        <div class="col-6 col-md-2">
            @* Link que redireciona para a busca filtrada pela categoria ID 4 *@
            <a asp-action="Busca" asp-route-categoriaId="4" class="text-decoration-none">
                @* Container do card estilizado *@
                <div class="cat-card shadow-sm hover-scale p-0 border-0">
                    @* Imagem da categoria Pets *@
                    <img src="~/img/pets.png" class="img-fluid rounded-4" alt="Pets">
                </div>
            </a>
        </div>

        @* Coluna para a categoria Jogos *@
        <div class="col-6 col-md-2">
            @* Link que redireciona para a busca filtrada pela categoria ID 3 *@
            <a asp-action="Busca" asp-route-categoriaId="3" class="text-decoration-none">
                @* Container do card estilizado *@
                <div class="cat-card shadow-sm hover-scale p-0 border-0">
                    @* Imagem da categoria Jogos *@
                    <img src="~/img/jogos.png" class="img-fluid rounded-4" alt="Jogos">
                </div>
            </a>
        </div>
    </div>
    @* --- FIM DA SEÇÃO DE CATEGORIAS --- *@

    @* Banner do Jogo *@
    @* --- SEÇÃO BANNER DO JOGO (SUBSTITUÍDA POR IMAGEM) --- *@
    @* O div abaixo define o espaçamento e a sombra leve igual ao seu wireframe *@
    <div class="mb-5 shadow-sm" style="max-width: 1362px; margin: 0 auto;">
        @* Link que envolve a imagem caso queira direcionar para o jogo no futuro *@
        <a href="#" class="text-decoration-none d-block">
            @* Imagem única substituindo o bloco de texto e botões *@
            @* 'rounded-5' garante o arredondamento das bordas conforme o design *@
            @* 'aspect-ratio' mantém a proporção de 1362x758 para não distorcer *@
            <img src="~/img/bannerJogo.jpg"
                 class="img-fluid rounded-5 w-100"
                 style="aspect-ratio: 1362 / 758; object-fit: cover; transition: none;"
                 alt="Banner do Jogo Ursinho Fabrício">
        </a>
    </div>
    @* --- FIM DA SEÇÃO BANNER DO JOGO --- *@
    </div>

    @* Marcas *@
@* --- SEÇÃO DE MARCAS FAVORITAS --- *@
<div class="mb-5 text-center">
    @* Título da seção mantido conforme o original *@
    <h3 class="fw-bold mb-4 text-secondary">Nossas Marcas Favoritas</h3>

    @* Container flexível para alinhar as marcas lado a lado com espaçamento *@
    <div class="d-flex justify-content-center flex-wrap gap-4">

