@model IEnumerable<FabricaDeSorrisos.Domain.Entities.Favorito>
@{
    ViewData["Title"] = "Meus Favoritos";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-primary"><i class="bi bi-heart-fill text-danger"></i> Meus Favoritos</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <i class="bi bi-heartbreak fs-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Você ainda não tem favoritos.</h3>
            <p>Que tal explorar nossa loja?</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-2">Ir para a Loja</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 position-relative">
                        <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 rounded-circle"
                                onclick="toggleFavorito(this, @item.BrinquedoId)"
                                data-auth="true"
                                title="Remover dos favoritos">
                            <i class="bi bi-trash"></i>
                        </button>

                        <div class="text-center p-3">
                            <img src="@(item.Brinquedo?.ImagemUrl ?? "https://placehold.co/150")"
                                 class="img-fluid" style="height: 150px; object-fit: contain;">
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate">@item.Brinquedo?.Nome</h6>
                            <p class="fw-bold text-primary">R$ @(item.Brinquedo?.Preco.ToString("N2"))</p>
                            <a href="#" class="btn btn-outline-primary btn-sm w-100">Ver Produto</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>