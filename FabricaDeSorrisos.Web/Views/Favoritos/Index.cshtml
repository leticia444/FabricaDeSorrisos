@model IEnumerable<FabricaDeSorrisos.Domain.Entities.Favorito>
@{
    ViewData["Title"] = "Meus Favoritos";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-heart-fill text-danger"></i> Meus Favoritos
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <i class="bi bi-heartbreak fs-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Você ainda não tem favoritos.</h3>
            <p>Que tal explorar nossa loja?</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-2 rounded-pill px-4">Ir para a Loja</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-4 g-4" id="lista-favoritos">
            @foreach (var item in Model)
            {
                <div class="col" id="card-favorito-@item.BrinquedoId">
                    <div class="card h-100 shadow-sm border-0 position-relative hover-card rounded-4 overflow-hidden">

                        <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 rounded-circle shadow-sm z-3 btn-remover"
                                onclick="toggleFavorito(this, @item.BrinquedoId)"
                                data-auth="@User.Identity.IsAuthenticated.ToString().ToLower()"
                                title="Remover dos favoritos">
                            <i class="bi bi-trash"></i>
                        </button>

                        <div class="text-center p-3 bg-light position-relative">
                            <a asp-controller="Home" asp-action="Detalhes" asp-route-id="@item.BrinquedoId" class="d-block">
                                <img src="@(item.Brinquedo?.ImagemUrl ?? "https://placehold.co/200?text=Sem+Foto")"
                                     class="img-fluid transition-scale"
                                     alt="@item.Brinquedo?.Nome"
                                     style="height: 150px; object-fit: contain;">
                            </a>
                        </div>

                        <div class="card-body text-center">
                            <h6 class="card-title text-truncate fw-bold mb-1">
                                <a asp-controller="Home" asp-action="Detalhes" asp-route-id="@item.BrinquedoId" class="text-decoration-none text-dark">
                                    @item.Brinquedo?.Nome
                                </a>
                            </h6>

                            <p class="fw-bold text-primary fs-5 mb-3">R$ @(item.Brinquedo?.Preco.ToString("N2"))</p>

                            <a asp-controller="Home" asp-action="Detalhes" asp-route-id="@item.BrinquedoId"
                               class="btn btn-outline-primary btn-sm w-100 rounded-pill fw-bold">
                                Ver Produto
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        transition: all 0.3s ease;
    }

    .transition-scale {
        transition: transform 0.3s ease;
    }

    .hover-card:hover .transition-scale {
        transform: scale(1.1);
    }

    .z-3 {
        z-index: 3;
    }
</style>